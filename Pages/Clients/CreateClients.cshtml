@page
@model MyStore.Pages.Clients.CreateClientsModel
@{
}



<br />

<h2>Create Client</h2>

<form method="POST">

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="exampleInputEmail1">Name</label>

        <div class="col-sm-6 ">
            <input type="text" class="form-control" name="name" value="@Model.clientsInfo.name" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="exampleInputEmail1">Email</label>

        <div class="col-sm-6 ">
            <input type="email" class="form-control" name="email" value="@Model.clientsInfo.email" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="exampleInputEmail1">Phone</label>

        <div class="col-sm-6 ">
            <input type="text" class="form-control" name="phone" value="@Model.clientsInfo.phone" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="exampleInputEmail1">Address</label>

        <div class="col-sm-6 ">
            <input type="text" class="form-control" name="address" value="@Model.clientsInfo.address" />
        </div>
    </div>


    <div class="row mb-3">

        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

        <div class="col-sm-3 d-grid">
            <a class="btn btn-primary" role="button" href="/"> Cancle</a>
        </div>
    </div>


</form>